@model GroceryItemLookup.Models.Department

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Name) Department</h4>
    <hr />
    <h5>Products in this Department</h5>
    @{
        var products = ViewBag.Products as IEnumerable<GroceryItemLookup.Models.Product>;
    }

    @if (products == null || !products.Any())
    {
        <p>No products in this department yet.</p>
    }
    else
    {
        <ul>
            @foreach (var product in products)
            {
                <li>@product.Name — $@product.Price</li>
            }
        </ul>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
