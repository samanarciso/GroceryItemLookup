@model GroceryItemLookup.Models.Department

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h5>Are you sure you want to delete this? This will also delete all products in this department.</h5>
<h6>@Html.DisplayFor(model => model.Name) Department</h6>
<hr />
<h5>Products in this Department</h5>
@{
    var products = ViewBag.Products as IEnumerable<GroceryItemLookup.Models.Product>;
}

@if (products == null || !products.Any())
{
    <p>No products in this department yet.</p>
}
else
{
    <ul>
        @foreach (var product in products)
        {
            <li>@product.Name — $@product.Price</li>
        }
    </ul>
}
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>

